{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@ui/*": ["src/ui/*"],
      "@flay/*": ["src/flay/*"],
      "@image/*": ["src/image/*"],
      "@movie/*": ["src/movie/*"],
      "@svg/*": ["src/svg/*"],
      "@nav/*": ["src/nav/*"]
    },
    "strict": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
